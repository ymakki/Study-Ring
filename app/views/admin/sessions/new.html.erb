<div class="container">
  <div class="row mb-5">
    <div class="col-lg-12 mt-4">
      <h2 class="text-center mb-3">管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal mt-3" }) do |f| %>
        <div class="form-group row mb-5">
          <%= f.label :メールアドレス, class: "col-lg-3 col-form-label text-lg-right" %>
          <div class="col-lg-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :パスワード, class: "col-lg-3 col-form-label text-lg-right" %>
          <div class="col-lg-7">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-2">
          <div class="col-lg-7 offset-lg-2 text-center"> <!-- text-centerを追加 -->
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>
        <% if false %>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= render "admin/shared/links" %>
</div>
