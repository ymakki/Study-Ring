<% if study.favorited_by?(current_user) %>
  <%= link_to study_favorites_path(study), method: :delete,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= study.favorites.count %>
  <% end %>
<% else %>
  <%= link_to study_favorites_path(study), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= study.favorites.count %>
  <% end %>
<% end %>