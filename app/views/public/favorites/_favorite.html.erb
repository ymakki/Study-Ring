<% if record.favorited_by?(current_user) %>
  <%= link_to study_record_favorites_path(record.study, record), method: :delete, remote: true, style: "text-decoration: none; color: #000000;" do %>
    <i class="fa-solid fa-thumbs-up"></i>
  <% end %>
  <span class="pl-1">いいね！　(</span>
  <%= record.favorites.count %>
  <span class="pl-1">件)</span>
<% else %>
  <%= link_to study_record_favorites_path(record.study, record), method: :post, remote: true, style: "text-decoration: none; color: #000000;" do %>
    <i class="fa-regular fa-thumbs-up"></i>
  <% end %>
  <span class="pl-1">いいね！　(</span>
  <%= record.favorites.count %>
  <span class="pl-1">件)</span>
<% end %>