<div class="d-flex align-items-center">
  <%= render 'layouts/back' %>
  <h2 class="pl-5">勉強記録</h2>
</div>

<div class="d-flex align-items-center">
  <%= render 'public/users/user_icon', user: @record.user %>
  <span class="pl-2"><%= @record.user.name %></span>
</div>

<div class="pl-3 pt-2 pb-2">
  <%= @record.word %>
</div>

<div class="d-flex align-items-center">
  <%= render 'public/studies/study_icon', study: @record.study %>
  <span class="pl-2"><%= @record.user.name %></span>
</div>

<div class="text-size-md pt-3">
  <% if @record.study.favorited_by?(current_user) %>
    <%= link_to study_favorites_path(@record.study), method: :delete, style: "text-decoration: none; color: #000000;" do %>
      <i class="fa-solid fa-thumbs-up"></i>
    <% end %>
    <span class="pl-1">いいね！　(</span>
    <%= @record.study.favorites.count %>
    <span class="pl-1">件)</span>
  <% else %>
    <%= link_to study_favorites_path(@record.study), method: :post, style: "text-decoration: none; color: #000000;" do %>
      <i class="fa-regular fa-thumbs-up"></i>
    <% end %>
    <span class="pl-1">いいね！　(</span>
    <%= @record.study.favorites.count %>
    <span class="pl-1">件)</span>
  <% end %>
</div>

<div class="text-size-md pt-3">
  <i class="fa-regular fa-comment"></i>
  <span class="pl-1">コメント　(</span>
  <%= @record.study.study_comments.count %>
  <span>件)</span>
</div>

<div>
  <%= render 'public/study_comments/index', study: @record.study %>
</div>

<div class="pt-3">
  <%#= render 'public/study_comments/form', study: @record.study, study_comment: @record.study.study_comment %>
</div>