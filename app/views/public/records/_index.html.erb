<% records.each do |record| %>
  <table class="table table-hover">
    <tr onclick="location.href='<%= study_record_path(record) %>'" style="cursor:pointer;">
      <td class="col-md-1">
        <div class="icon-sm">
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.get_profile_image(50, 50), class: "img-fluid" %>
          <% else %>
            <i class="fa-regular fa-circle-user"></i>
          <% end %>
        </div>
      </td>
      <td class="col-md-7">
        <table class="table-borderless">
          <tr  class="no-hover">
            <td>
              <div><%= @user.name %></div>
              <div><%= record.word %></div>
            </td>
          </tr>
          <tr class="no-hover">
            <td>
              <div class="d-flex">
                <%= render 'public/studies/study_icon', study: record.study %>
                <div><%= record.study.title %></div>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <span>
                <i class="fa-regular fa-comment"></i>
                <%= record.study.study_comments.count %>
              </span>
              <span class="ml-3"><%= render 'public/favorites/favorite', study: record.study %></span>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<% end %>
