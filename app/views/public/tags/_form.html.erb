<%= form_with model: @tag, url: @tag.persisted? ? user_tag_path(user_id: @tag.user.id) : user_tags_path, method: @tag.persisted? ? :patch : :post, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <% if action_name == 'edit' %>
    <span class="form-group">
      <%= link_to "削除", user_tag_path(@tag), method: :delete, data: { confirm: "カテゴリを削除しますか？" }, class: "btn btn-light border-dark" %>
    </span>
  <% end %>

  <span><%= f.submit '保存', class: "btn btn-dark" %></span>

<% end %>