<% timelines.each do |timeline| %>
  <%  if timeline.record.present? %>
    <table class="table table-hover">
      <tr>
        <td class="col-md-1">
          <div class="icon-sm">
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.get_profile_image(50, 50), class: "img-fluid" %>
            <% else %>
              <i class="fa-regular fa-circle-user"></i>
            <% end %>
          </div>
        </td>
        <td class="col-md-6">
          <table class="table-borderless">
            <tr  class="no-hover">
              <td>
                <div><%= @user.name %></div>
                <div><%= timeline.record.word %></div>
              </td>
            </tr>
            <tr class="no-hover">
              <td>
                <div class="d-flex">
                  <%= render 'public/studies/study_icon', study: timeline.record.study %>
                  <div class="d-flex flex-column ml-2">
                    <div><%= timeline.record.study.title %></div>
                    <div><i class="fa-regular fa-clock text-size"></i><%= timeline.record.study_time %>分</div>
                  </div>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <span>
                  <i class="fa-regular fa-comment"></i>
                  <%= timeline.record.study_comments.count %>
                </span>
                <span class="ml-3"><%= render 'public/favorites/favorite', record: timeline.record %></span>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
    <div class="text-right"><%= timeline.record.start_time.strftime('%Y年%m月%d日 %H:%M') %></div>
  <%  elsif timeline.study_review.present? %>
    <table class="table table-hover">
      <tr>
        <td class="col-md-1">
          <div class="icon-sm">
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.get_profile_image(50, 50), class: "img-fluid" %>
            <% else %>
              <i class="fa-regular fa-circle-user"></i>
            <% end %>
          </div>
        </td>
        <td class="col-md-6">
          <table class="table-borderless">
            <tr  class="no-hover">
              <td>
                <div><%= @user.name %></div>
                <div><%= timeline.study_review.title %></div>
              </td>
            </tr>
            <tr class="no-hover">
              <td>
                <div class="d-flex">
                  <%= render 'public/studies/study_icon', study: timeline.study_review.study %>
                  <div class="d-flex flex-column ml-2">
                    <div><%= timeline.study_review.study.title %></div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  <% end %>
<% end %>