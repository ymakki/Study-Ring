<%= render 'layouts/errors', obj: @study_review %>
<div class="d-flex align-items-center">
  <%= render 'layouts/back' %>
</div>
<div class="d-flex align-items-center pb-3">
  <div class="icon d-flex align-items-start">
    <% if @study.image.attached? %>
      <%= image_tag @study.get_image(100, 100), class: "img-fluid study-image" %>
    <% else %>
      <i class="fa-solid fa-book"></i>
    <% end %>
  </div>
  <h2 class="break-word pl-2"><%= @study.title %></h2>
</div>
<%= render 'public/study_reviews/form', study_review: @study_review, study: @study %>