<%= form_with model: user, method: :patch, local: true do |f| %>
  <table class="table col-md-8">
    <tr>
      <td class="form-group col-md-2">
        <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
      </td>
      <td class="form-group col-md-6">
        <%= f.label :name, "ニックネーム" %>
        <%= f.text_field :name, class: "form-control" %>
      </td>
    </tr>
    <tr>
      <td colspan=2 class="form-group">
        <%= f.label :introduction, "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <td colspan=2 class="form-group">
        <%= f.label :tag_id, "ユーザータグ" %>
        <%= f.collection_select(:tag_id, Tag.all, :id, :name, { prompt: "" }, { class: "form-control" }) %>
      </td>
    </tr>

    <tr>
      <td colspan=2>
        <%= f.label :follow_request, "フォロワー募集" %><br>
        <%= f.select :follow_request, User.follow_requests, include_blank: false, class: "form-control" %>
      </td>
    </tr>
    <tr>
      <td colspan=2>
        <%= f.label :sex, "性別" %><br>
        <%= f.select :sex, User.sexes, include_blank: true, class: "form-control" %>
      </td>
    </tr>
    <tr>
      <td colspan=2 class="form-group w-100">
        <div class="field">
          <%= f.label :birthday, "生年月日" %><br>
          <%= f.date_field :birthday, class: "form-control" %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan=2 class="form-group">
        <%= f.label :residence, "都道府県" %><br>
        <%= f.select :residence, User.residences, include_blank: true, class: "form-control" %>
      </td>
    </tr>
    <tr>
      <td colspan=3 class="text-center">
        <span class="pt-2"><%= f.submit "保存", class: "btn btn-dark" %></span>
      </td>
    </tr>
  </table>
<% end %>