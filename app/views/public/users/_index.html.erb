<table class="table w-100 table-hover">
  <% users.each do |user| %>
    <tr>
      <td class="col-md-1 mb-3">
        <%= render 'public/users/user_icon', user: user %>
      </td>
      <td class="col-md-7" onclick="location.href='<%= user_path(user) %>'" style="cursor:pointer;">
        <div class="text-size"><%= user.name %></div>
        <div class="text-size break-word"><%= user.introduction %></div>
        <i class="fa-regular fa-clock">
        <span class="text-size"><%= user.total_study_time %></span>
      </td>
      <td class="text-right align-middle">
        <% unless current_user == user %>
          <div id="relationship-<%= user.id %>"><%= render 'public/relationships/button', user: user %></div>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>