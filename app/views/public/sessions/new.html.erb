<div class="container device">
  <div class="row">
    <div class="outline col-lg-12 mt-4">
      <h2 class="title text-center mb-4">ログイン</h2>
      <div class="text ml-5 mt-3">会員の方はこちらからログイン</div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <tr>
            <td class="from pl-5 pt-3"><%= f.label :email, "メールアドレス" %></td>
            <td class="from pl-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="from pl-5 pt-3"><%= f.label :password, "パスワード" %></td>
            <td class="from pl-5"><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
          </tr>
          <tr>
            <!--Deviseの内部で使用されるヘルパーメソッドで、rememberableが有効な場合はtrueを返す-->
            <% if devise_mapping.rememberable? %>
              <td></td>
              <td class="from pl-5">
                <%= f.check_box :remember_me %>
                <%= f.label :"ログインを保存" %>
              </td>
            <% end %>
          </tr>
          <tr>
            <td></td>
            <td class="btn-position"><%= f.submit "ログイン", class: "btn btn-sm btn-primary" %></td>
          </tr>
        </table>
      <% end %>
      <div class="mt-4">
        <div class="text">会員登録がお済でない方</div>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
