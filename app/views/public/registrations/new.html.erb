<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h2 class="text-center mb-4" style="font-weight:bold; color:#A07B35; font-family: serif;">新規会員登録</h2>

      <div style="padding: 15px; margin-bottom: 10px; border: 5px double #A07B35; background-color: #fffaf0;">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <tbody>
            <tr>
              <td class="p-1"><%= f.label :email, "メールアドレス" %></td>
              <td></td>
              <td class="p-1"><%= f.email_field :email, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td>
                <%= f.label :password, "パスワード" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
              </td>
              <td></td>
              <td>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr>
              <td class="p-1"><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
              <td></td>
              <td>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr>
              <td colspan="4"></td>
              <td></td>
              <td class="p-2"><%= f.submit "新規登録", class:"btn btn-success" %></td>
           </tr>
        </tbody>
      </table>
      <% end %>
    </div>
    <div class="mt-4">
      <h5 style="font-weight:bold; color:#A07B35; font-family: serif;">既に登録済みの方</h5>
      <%= render "public/shared/links" %>
    </div>
    </div>
  </div>
</div>