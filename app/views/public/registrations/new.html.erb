<div class="container device">
  <div class="row">
    <div class="outline col-lg-12 mt-4">
      <h2 class="title text-center mb-4">新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <tr>
            <td class="from pl-5 pt-3"><%= f.label :name, "名前" %></td>
            <td></td>
            <td class="from pl-5"><%= f.text_field :name, autocomplete: "name", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="from pl-5 pt-3"><%= f.label :email, "メールアドレス" %></td>
            <td></td>
            <td class="from pl-5"><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="from pl-5 pt-3">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </td>
            <td></td>
            <td class="from pl-5">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <td class="from pl-5 pt-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td></td>
            <td class="from pl-5">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td class="btn-position pt-5"><%= f.submit "新規登録", class:"btn btn-sm btn-success" %></td>
          </tr>
        </table>
      <% end %>
      <div class="mt-4">
        <div class="text">既に登録済みの方</div>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>