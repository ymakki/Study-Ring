<% if study_review.favorited_by?(current_user) %>
  <%= link_to study_study_review_review_favorites_path(study_review.study, study_review), method: :delete, remote: true, style: "text-decoration: none; color: #000000;" do %>
    <i class="fa-solid fa-thumbs-up"></i>
  <% end %>
  <span class="pl-1">いいね！　(</span>
  <%= study_review.review_favorites.count %>
  <span class="pl-1">件)</span>
  <div class="d-flex gap-2 break-word">
    <% study_review.favoriting_users.each do |user| %>
      <%= render 'public/users/user_icon', user: user %>
    <% end %>
  </div>
<% else %>
  <%= link_to study_study_review_review_favorites_path(study_review.study, study_review), method: :post, remote: true, style: "text-decoration: none; color: #000000;" do %>
    <i class="fa-regular fa-thumbs-up"></i>
  <% end %>
  <span class="pl-1">いいね！　(</span>
  <%= study_review.review_favorites.count %>
  <span class="pl-1">件)</span>
  <div class="d-flex gap-2 break-word">
    <% study_review.favoriting_users.each do |user| %>
      <%= render 'public/users/user_icon', user: user %>
    <% end %>
  </div>
<% end %>