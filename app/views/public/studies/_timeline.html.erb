<% studies.each do |study| %>
  <table class="table table-hover">
    <tr onclick="location.href='<%= study_path(study) %>'" style="cursor:pointer;">
      <td class="col-md-1">
        <div class="icon-sm">
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.get_profile_image(50, 50), class: "img-fluid" %>
          <% else %>
            <i class="fa-regular fa-circle-user"></i>
          <% end %>
        </div>
      </td>
      <td class="col-md-7">
        <table class="table-borderless">
          <tr  class="no-hover">
            <td>
              <%= @user.name %>
            </td>
          </tr>
          <tr class="no-hover">
            <td><%= study.title %></td>
          </tr>
          <tr>
            <td>
              <i class="fa-regular fa-comment"></i>
              <%= study.study_comments.count %>
            </td>
            <td><%= render 'public/favorites/favorite', study: study %></td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<% end %>
