<%= render 'layouts/errors', obj: @study %>
<%= render 'public/users/side', user: current_user %>
<div class='col-md-8 offset-md-1'>
  <%= form_with model: @study, url: studies_path, method: :post, local: true do |f| %>
    <div class="row">
      <div class="col-lg-3">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group col-lg-5">
        <%= f.text_field :title, placeholder: "教材名", class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-lg-8">
        <%= f.text_area :body, class: 'form-control', placeholder: '内容' %>
      </div>
    </div>
    <div class="row">
      <div class=col-lg-3></div>
      <div class="col-lg-5 mt-5">
        <%= f.submit '保存', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
