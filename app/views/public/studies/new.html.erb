<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @study %>
  <div class='row'>
    <div class='col-md-7 mx-auto'>
      <%= form_with model: @study, url: studies_path, method: :post, local: true do |f| %>
        <div class="form-group row">
          <div class="col-lg-5">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="col-lg-7">
            <%= f.text_field :title, placeholder: "教材名", class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class: 'form-control', placeholder: '内容' %>
        </div>
        <div class="form-group row">
          <label for="study_status" class="col-lg-4 col-form-label">ステータス</label>
          <div class="col-lg-4"></div>
          <div class="col-lg-4">
            <%= f.select :status, Study.statuses, { selected: Study.statuses[:studying] }, { class: 'form-control' } %>
          </div>
          <div class="mx-auto mt-5">
            <%= f.submit '保存', class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
