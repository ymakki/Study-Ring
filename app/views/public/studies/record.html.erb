<%= render 'layouts/errors', obj: @study %>
<div class="d-flex align-items-center">
  <%= render 'layouts/back' %>
  <h2 class="pl-5">勉強記録</h2>
</div>

<div class="d-flex align-items-center">
  <%= render 'public/users/user_icon', user: @user %>
  <span class="pl-2"><%= @user.name %></span>
</div>

<div>
  <%= @study.study_comments %>
</div>

<div class="d-flex align-items-center">
  <%= render 'public/studies/study_icon', study: @study %>
  <span class="pl-2"><%= @user.name %></span>
</div>

<div class="text-size-md pt-3">
  <% if @study.favorited_by?(current_user) %>
    <%= link_to study_favorites_path(@study), method: :delete, style: "text-decoration: none; color: #000000;" do %>
      <i class="fa-solid fa-thumbs-up"></i>
    <% end %>
    <span class="pl-1">いいね！　(</span>
    <%= @study.favorites.count %>
    <span class="pl-1">件)</span>
  <% else %>
    <%= link_to study_favorites_path(@study), method: :post, style: "text-decoration: none; color: #000000;" do %>
      <i class="fa-regular fa-thumbs-up"></i>
    <% end %>
    <span class="pl-1">いいね！　(</span>
    <%= @study.favorites.count %>
    <span class="pl-1">件)</span>
  <% end %>
</div>

<div class="text-size-md pt-3">
  <i class="fa-regular fa-comment"></i>
  <span class="pl-1">コメント　(</span>
  <%= @study.study_comments.count %>
  <span>件)</span>
</div>

<div>
  <%= render 'public/study_comments/index', study: @study %>
</div>

<div class="pt-3">
  <%= render 'public/study_comments/form', study: @study, study_comment: @study_comment %>
</div>