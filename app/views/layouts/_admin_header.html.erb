        <a class="navbar-brand" href="/" ><span>StudyRing</span></a>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li>
              <%= link_to admin_users_path, class: "btn btn-outline-light rounded-pill mr-2" do %>
