<% case controller.controller_name %>
  <% when "tags" %>
    <% if controller.action_name == "index" %>
      <% link = studies_path %>
    <% else %>
      <% link = user_tags_path %>
    <% end %>
  <% when "tagsearches" %>
    <% link = user_path(current_user) %>
  <% when "studies" %>
    <% link = studies_path %>
  <% when "records" %>
    <% link = records_path %>
  <% when "study_reviews" %>
    <% if params[:id].present? %>
      <% study_review = StudyReview.find(params[:id]) %>
      <% study = study_review.study %>
      <% link = study_path(study) %>
    <% else %>
      <% link = search_path(search_type: 'study') %>
    <% end %>
  <% else %>
    <% link = request.referer %>
<% end %>

<%= link_to link, class: "back" do %>
  <i class="fa-solid fa-arrow-left"></i>
<% end %>
